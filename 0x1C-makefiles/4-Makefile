CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ) 
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS)	-c -o $@ $<

clean:
	$(rm) -f *~ $(NAME)

oclean:
	$(rm) -f $(OBJ)

fclean: clean oclean

re: oclean all

.PHONY : $(NAME)
